{
    "name": "pauci/cqrs-factory",
    "description": "CQRS factories for PSR-11",
    "version": "0.7.0",
    "type": "library",
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "require": {
        "php": "^8.0 || ^8.1 || ^8.2",
        "pauci/cqrs": "^0.7.0",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "doctrine/orm": "^2.8",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/serializer": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "CQRSFactory\\": "src/"
        }
    },
    "scripts": {
        "check": [
            "@lint",
            "@cs-check",
            "@stan"
        ],
        "lint": "parallel-lint src",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse --no-progress",
        "test": "phpunit"
    }
}
