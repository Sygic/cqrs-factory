{
    "name": "pauci/cqrs-factory",
    "description": "CQRS factories for PSR-11",
    "type": "library",
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.4 | ^8.0",
        "psr/container": "^1.0",
        "pauci/cqrs": "^0.5.0"
    },
    "require-dev": {
        "doctrine/orm": "^2.7",
        "phpstan/phpstan": "^0.12.58",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "CQRSFactory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CQRSFactoryTest\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse --no-progress",
        "test": "phpunit"
    }
}
