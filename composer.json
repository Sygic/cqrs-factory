{
    "name": "pauci/cqrs-factory",
    "description": "CQRS factories for container-interop",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "psr/container": "^1.0",
        "pauci/cqrs": "^0.3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.1",
        "squizlabs/php_codesniffer": "^2.5",
        "doctrine/orm": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "CQRSFactory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CQRSFactoryTest\\": "test/"
        }
    },
    "extras": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    }
}
